<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <ImageView
            android:id="@+id/iv_spell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:src="@drawable/care_package"/>

    <TextView
            android:id="@+id/tv_spell_name"
            android:textSize="@dimen/h3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/iv_spell"
            tools:text="@string/care_package"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
    />

    <TextView android:id="@+id/tv_spell_desc"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toBottomOf="@id/tv_spell_name"
              app:layout_constraintLeft_toRightOf="@id/iv_spell"
              app:layout_constraintRight_toRightOf="parent"
              tools:text="@string/description_care_package"
    />
</androidx.constraintlayout.widget.ConstraintLayout>